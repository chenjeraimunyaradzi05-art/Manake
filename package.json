{
  "name": "manake-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Manake Rehabilitation Center Platform",
  "workspaces": [
    "manake-web",
    "manake-mobile"
  ],
  "scripts": {
    "preinstall": "node ./scripts/clean-esbuild.mjs",
    "start": "npm run dev:web",
    "build": "npm run build:web",
    "dev:web": "npm run dev --workspace=manake-web",
    "build:web": "npm run build --workspace=manake-web",
    "test:web": "npm run test --workspace=manake-web",
    "test:mobile": "npm run test --workspace=manake-mobile",
    "test": "npm run test:web && npm run test:mobile",
    "start:mobile": "npm run start --workspace=manake-mobile",
    "android": "npm run android --workspace=manake-mobile",
    "ios": "npm run ios --workspace=manake-mobile",
    "install:all": "npm install",
    "prepare": "node ./scripts/prepare.mjs"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "volta": {
    "node": "20.19.6"
  },
  "keywords": [
    "manake",
    "rehabilitation",
    "platform"
  ],
  "author": "GitHub Copilot",
  "license": "ISC",
  "dependencies": {
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "manake-web/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "manake-mobile/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "esbuild": "0.27.2",
    "typescript": "5.8.3",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3"
  }
}
