# Manake Rehabilitation Center - Environment Variables
# Copy this file to .env and fill in your values

### Frontend / API Base
# For local dev (Vite proxy to 3001): use http://localhost:3001/api
# For Netlify production: use /.netlify/functions/api
VITE_API_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:5173

### Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

### Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/manake?retryWrites=true&w=majority

### JWT
JWT_SECRET=your_jwt_secret_key_change_this
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this

### Social Auth
# Comma-separated list of allowed Google OAuth client IDs for ID token verification.
# Include the client ID used by your mobile app (iOS/Android) and/or web.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

### Apple Sign In (server-side token exchange)
# Apple Services ID / Client ID (must match what the client uses).
APPLE_CLIENT_ID=
# Apple Developer Team ID
APPLE_TEAM_ID=
# Key ID for the Sign in with Apple private key
APPLE_KEY_ID=
# Private key contents (ES256). For Netlify, paste the key and replace newlines with \n.
APPLE_PRIVATE_KEY=

# Default redirect URI used if the client doesn't provide one.
# For the Expo mobile app, the client sends redirectUri and you can leave this empty.
# For web flows, set this to your deployed callback URL; for dev:
SOCIAL_REDIRECT_URI=http://localhost:5173/auth/google/callback

### Analytics (optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

### Cloudinary (optional image upload)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=manake_uploads

### Contact Info (frontend display)
VITE_CONTACT_EMAIL=info@manake.org.zw
VITE_CONTACT_PHONE=+263775772277
VITE_WHATSAPP_NUMBER=263776123456

### Social Links (frontend display)
VITE_FACEBOOK_URL=https://facebook.com/ManakeRehab
VITE_INSTAGRAM_URL=https://instagram.com/ManakeRehab
VITE_TWITTER_URL=https://twitter.com/ManakeRehab
