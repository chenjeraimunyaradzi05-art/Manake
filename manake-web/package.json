{
  "name": "manake-web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Manake Rehabilitation Center - Website for youth drug and alcohol rehabilitation in Zimbabwe",
  "scripts": {
    "preinstall": "node ../scripts/clean-esbuild.mjs",
    "dev": "vite",
    "dev:server": "npx tsx src/server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "seed": "npx tsx src/server/scripts/seed.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "e2e:ci": "playwright test --project=chromium"
  },
  "dependencies": {
    "@sentry/react": "^10.34.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.66.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "events": "^3.3.0",
    "esbuild": "^0.27.2",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.1",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.2",
    "nodemailer": "^7.0.12",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^14.0.0",
    "postcss-preset-env": "^11.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-error-boundary": "^6.0.2",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^7.12.0",
    "serverless-http": "^4.0.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "stripe": "^20.1.1",
    "tailwindcss-animate": "^1.0.7",
    "util": "^0.12.5",
    "web-vitals": "^5.1.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/simple-peer": "^9.11.9",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "rehabilitation",
    "zimbabwe",
    "youth",
    "addiction",
    "recovery",
    "nonprofit"
  ],
  "author": "Manake Rehabilitation Center",
  "license": "MIT"
}
